<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Title Toolbar Theme Custom-->
    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="titleTextColor">@color/black_color</item>
        <item name="android:background">@color/white_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Text View for Item List Custom-->
    <style name="TextViewItem">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/black_color</item>
    </style>

    <style name="TextViewItem.white" parent="TextViewItem">
        <item name="android:textColor">@color/white_color</item>
    </style>

    <style name="TextViewItem.black" parent="TextViewItem">
        <item name="android:textColor">@color/black_color</item>
    </style>

    <style name="TextViewItem.red.dark" parent="TextViewItem">
        <item name="android:textColor">@color/primary_dark_color</item>
    </style>

    <style name="TextViewItem.red.light" parent="TextViewItem">
        <item name="android:textColor">@color/primary_light_color</item>
    </style>

    <style name="TextViewItem.gray" parent="TextViewItem">
        <item name="android:textColor">@color/gray_color</item>
    </style>

    <!--Button Back Circle-->
    <style name="ButtonBackCircle" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:backgroundTint">@color/white_color</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cornerRadius">100dp</item>
        <item name="pressedTranslationZ">5dp</item>
        <item name="elevation">8dp</item>
        <item name="icon">@drawable/ic_arrow_back_24</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">24dp</item>
    </style>

    <style name="ButtonBackCircle.Black" parent="ButtonBackCircle">
        <item name="iconTint">@color/black_color</item>
    </style>

    <!--Text Input Layout Custom-->
    <style name="TextInputLayoutCustom" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/activity_start_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_end_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_top_margin_16dp</item>
    </style>

    <style name="TextInputLayoutCustom.HelperText" parent="TextInputLayoutCustom">
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/color_red</item>
    </style>

    <style name="TextInputLayoutCustom.HelperText.Counter" parent="TextInputLayoutCustom.HelperText">
        <item name="counterEnabled">true</item>
    </style>

    <style name="TextInputLayoutCustom.HelperText.DropDownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/activity_start_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_end_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_top_margin_16dp</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/color_red</item>
    </style>

    <style name="TextInputLayoutCustom.HelperText.Icon" parent="TextInputLayoutCustom">
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/color_red</item>
    </style>

    <!--Text Input Edit Text Custom-->
    <style name="TextInputEditTextCustom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextInputEditTextCustom.Disable" parent="TextInputEditTextCustom">
        <item name="android:editable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:inputType">none</item>
    </style>

</resources>