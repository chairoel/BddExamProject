<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Title Toolbar Theme Custom-->
    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="titleTextColor">@color/black_color</item>
        <item name="android:background">@color/white_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Text View for Item List Custom-->
    <style name="TextViewItem">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/black_color</item>
    </style>

    <style name="TextViewItem.white" parent="TextViewItem">
        <item name="android:textColor">@color/white_color</item>
    </style>

    <style name="TextViewItem.black" parent="TextViewItem">
        <item name="android:textColor">@color/black_color</item>
    </style>

    <style name="TextViewItem.red.dark" parent="TextViewItem">
        <item name="android:textColor">@color/primary_dark_color</item>
    </style>

    <style name="TextViewItem.red.light" parent="TextViewItem">
        <item name="android:textColor">@color/primary_light_color</item>
    </style>

    <style name="TextViewItem.gray" parent="TextViewItem">
        <item name="android:textColor">@color/gray_color</item>
    </style>

    <style name="ButtonBackCircle" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:backgroundTint">@color/white_color</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cornerRadius">100dp</item>
        <item name="pressedTranslationZ">5dp</item>
        <item name="elevation">8dp</item>
        <item name="icon">@drawable/ic_arrow_back_24</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">24dp</item>
    </style>

    <style name="ButtonBackCircle.Black" parent="ButtonBackCircle">
        <item name="iconTint">@color/black_color</item>
    </style>


</resources>